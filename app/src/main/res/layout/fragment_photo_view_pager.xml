<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".fragments.PhotoViewPagerFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/photo_info_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:paddingHorizontal="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/previous_photo_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/previous_button_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_media_rew"
            app:iconGravity="start" />

        <Button
            android:id="@+id/next_photo_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/next_button_text"
            android:textAlignment="center"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_media_ff"
            app:iconGravity="end" />
    </LinearLayout>
</LinearLayout>